{
  "source": {
    "include": ["./src"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "recurse": true,
    "encoding": "utf8",
    "destination": "./docs/",
    "readme": "./src/index.md",
    "template": "./template/ink-docstrap/template"
  }
}